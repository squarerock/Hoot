<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_bird"
        android:id="@+id/iv_search_item_user"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:text="Elon Musk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/tv_search_user_name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_search_item_user"
        app:layout_constraintRight_toLeftOf="@+id/iv_search_user_verified"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:text="\@elonmusk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/handle_color"
        android:textSize="12sp"
        android:id="@+id/tv_search_user_handle"
        app:layout_constraintBottom_toBottomOf="@+id/tv_search_user_name"
        app:layout_constraintTop_toTopOf="@+id/tv_search_user_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_search_user_verified"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/ic_verified"
        android:id="@+id/iv_search_user_verified"
        app:layout_constraintTop_toTopOf="@+id/tv_search_user_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_search_user_name"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_search_user_desc"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_user_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>
</android.support.constraint.ConstraintLayout>