<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_bird"
        android:id="@+id/iv_follow"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_follow_name"
        app:layout_constraintTop_toTopOf="@+id/iv_follow"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_follow"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:text="\@textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_follow_handle"
        app:layout_constraintLeft_toLeftOf="@+id/tv_follow_name"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_follow_name"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_follow_description"
        app:layout_constraintLeft_toLeftOf="@+id/tv_follow_handle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_follow_handle"/>

    <View android:background="@color/divider_color"
          android:layout_height="1dp"
          app:layout_constraintTop_toBottomOf="@+id/tv_follow_description"
          android:layout_width="0dp"
          android:layout_marginTop="16dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>